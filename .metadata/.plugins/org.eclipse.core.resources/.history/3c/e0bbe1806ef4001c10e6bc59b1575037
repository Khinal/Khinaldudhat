package forloop;

public class print4 {

public static void main(String[] args) {
		
		int lines = 5;
		var starCount = 1;
		var spaceCount = lines - 1;
		
		for(int j=1; j <= lines; j++) {
		
		for(int k = 1; j<= spaceCount; j++) {
		
			System.out.print(" ");
		}
			for (int i = 1; i <= starCount; i++) {
				System.out.println("*");
		}
	        System.out.println();
			starCount++;
			spaceCount++;
}
}
}
